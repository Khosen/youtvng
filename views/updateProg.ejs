

<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/navbarHead') %>
<%- include('./partials/formsheets') %>

</head>
<body>
  <%-include('./partials/navbarBody') %>
  
<div class="container">
  <div class="">
  <div class="wrapper wrapper--w790 " >
    <div class="card card-5">
    <div class="card-heading">
      <h2 class="title">News Post</h2>
   
    </div>
    <div class="card-body">
     
      <form  class="form-signin" action="/admin/updateProg" id="form" method="POST" >
     
     
        <div class="text-center">
            <img src="/img/navlogo.jpeg">
            <p><label class="text-center">News Post</label> </p>
            
            <p>  <span> <% if (locals.message.length>0) { %>
                <ul>
                  
                        <li class="alert alert-danger" style="list-style:none; font-weight: bold;">
                            <%= message%>
                        </li>
                   
                </ul>
                <% } %>
            </span>
                    </p>

                    <h1 class="h3 mb-3 font-weight-normal">Please Enter Programmes</h1>
                    <label for="categoryOption" class="sr-only">Category</label>
                    <select id="categoryOption" name="categoryOption" class="form-control" placeholder="choose category" data-toggle="tooltip"
                    title="click for dropdown">
                    <% for (let a=0; a< category.length; a++) {%>
                        <option value="<%= category[a].category%>"> <%= category[a].category %></option>
                       <% }%> 
                        
                 </select>
            
                    <label for="inputSub" class="sr-only">SubCategory</label>
                    <input type="text" class="form-control" id="inputSub" name = "inputSub" placeholder="SubCategory">
                   
                    <div class="form-group row">
                        <div class="form-group col-md-4">
        
                         <button class="btn btn-lg  btn-block btn-primary btn-danger" formaction="/createProg"  type="submit">Create</button>
                        
                          </div>
                     
              
                    <div class="form-group col-md-4">
                   
                    <button class="btn btn-lg  btn-block btn-primary btn-danger" formaction="/updateSub" type="submit">Update</button>
                
                            
                  </div>
                    <div class="form-group col-md-4">
                 
                    <button class="btn btn-lg  btn-block btn-primary btn-danger" formaction="/createProg" type="submit">Exit</button>
                   
                </div>
                </div>
        
        </div>
        <br>
        <br>
         
      </form>
   </div>
</div> 
</div>
</div>
</div>
    
<%- include('./partials/formScripts') %>
    <script src="/js/theValue.js"></script>
    <script src="/js/imgPreview.js"></script>
</body>
</html>
