

<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/navbarHead') %>
<%- include('./partials/formsheets') %>

</head>
<body>
  <%-include('./partials/navbarBody') %>
  
<div class="container">
  <div class="">
  <div class="wrapper wrapper--w790 " >
    <div class="card card-5">
    <div class="card-heading">
      <h2 class="title">News Post</h2>
   
    </div>
    <div class="card-body">
     
      <form  class="form-signin" action="/music/uploadSong" id="form" method="POST" accept=".mp3" enctype="multipart/form-data">
        <span> <% if (locals.message.length>0) { %>
            <ul>
              
                    <li class="alert alert-danger" style="list-style:none; font-weight: bold;">
                        <%= message%>
                    </li>
               
            </ul>
            <% } %>
        </span>
     
      
        <br>
        <br>
    
     
      
          <div class="form-group">
            <label >Music Title</label>
             <input class="form-control" type="text" name="title" id="title" placeholder="eg.: The eagle has landed">
          </div>
          <div class="form-group">
        
              <label >Artist</label>
                <input class="form-control" type="text" name="artist" id="artist" placeholder="eg.:emaz">
            </div>
      
        <div class="form-group">
          <label >Genre</label>
               
          <input class="form-control" type="text" name="genre" id="genre" placeholder="eg.: upload video">
           </div>
       <div class="form-group">
         
     
        <div class="form-row">
          <div class="name">Song</div>
          <div class="value">
          <div class="input-group">
              <label for="image" class="textlabel" title="upload image thumbnail for post"> (mp3 files only!)</label>
              <br>
              <input class="textlabel" type='file' id='music' onchange="readURL(this);" name='music'/>
                    
              <!--  </form>-->
               <br>
              <!-- <img id="prev" src="<%= typeof  file != 'undefined' ? file: ' ' %>"  class="img-thumbnail"/>
              --> </div>
          </div>

          <div class="name">Album Art</div>
          <div class="value">
          <div class="input-group">
              <label for="image" class="textlabel" title="upload image thumbnail for post"> jpg, jpeg, png only!!! max. size (2mb)</label>
              <br>
              <input class="textlabel" type='file' id='image' onchange="readURL(this);" name='image'/>
                    
              <!--  </form>-->
               <br>
                <img id="prev" src="<%= typeof  file != 'undefined' ? file: ' ' %>"  class="img-thumbnail"/>
                </div>
          </div>
         
          </div>
          
          <div class="form-row button-wrapper">
            <div class="col-12 col-md-6">
                <button type="submit" class="btn btn-primary btn-danger btn-block">Post</button>
       
            </div>
            <div class="col-12 col-md-6">
          <button type="submit" class="btn btn-primary btn-danger btn-block" formaction="/admin/posts">Cancel</button>
          </div>
          </div>
         
      </form>
   </div>
</div> 
</div>
</div>
</div>
    
<%- include('./partials/formScripts') %>
    <script src="/js/theValue.js"></script>
    <script src="/js/uploads.js"></script>
</body>
</html>
